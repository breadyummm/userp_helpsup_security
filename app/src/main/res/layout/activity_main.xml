<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BbackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:contentDescription="return button"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/ps_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/nanami"
            android:text="Password and Security"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_toEndOf="@id/BbackButton"/>

    </RelativeLayout>


    <View
        android:layout_width="476dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#D08B8B8B" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/lorem_ipsum"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"

        />



    <androidx.cardview.widget.CardView
        android:id="@+id/p_s_btn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_corner">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanami"
                android:padding="15dp"
                android:text="Change Password"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/forward" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/dg_ol" />

    <androidx.cardview.widget.CardView
        android:id="@+id/p_s_btn2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E7F7E1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanami"
                android:padding="15dp"
                android:text="Saved Login"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/forward" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/dg_ol" />

    <androidx.cardview.widget.CardView
        android:id="@+id/p_s_btn3"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bot_corner">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanami"
                android:padding="15dp"
                android:text="Security Checkup"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/forward" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>