<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BbackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:contentDescription="return button"
            android:src="@drawable/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_toEndOf="@id/BbackButton"
            android:fontFamily="@font/nanami"
            android:text="Report a Problem"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>


    <View
        android:layout_width="476dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#D08B8B8B" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="Details"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/report"
        android:layout_width="347dp"
        android:layout_height="234dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt_txt_outline"
        android:fontFamily="@font/poppins_regular"
        android:gravity="start"
        android:hint="Make your report..."
        android:paddingLeft="7dp"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/up_ss"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="309dp"
            android:layout_height="48dp"
            android:background="#E7F7E1">

            <ImageView
                android:id="@+id/clip_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:src="@drawable/attach" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@id/clip_up"
                android:fontFamily="@font/poppins_regular"
                android:padding="9dp"
                android:text="Add a screenshot or video (recommended)"
                android:layout_centerVertical="true"
                android:textSize="11sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submitrep_btn"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/save_corner"
            android:fontFamily="@font/poppins_regular"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/submitrep_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edt_txt_outline"
            android:fontFamily="@font/poppins_regular"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>