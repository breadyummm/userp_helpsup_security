<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/BbackButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:contentDescription="return button"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/ps_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_toEndOf="@id/BbackButton"
            android:fontFamily="@font/nanami"
            android:text="Saved Logins"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>


    <View
        android:layout_width="476dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="#D08B8B8B" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="Email Address"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/email_add"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/edt_txt_outline"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="7dp"
        android:hint="Email Address"
        android:textSize="15sp"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:text="Password"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />


    <EditText
        android:id="@+id/new_pass"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="@drawable/edt_txt_outline"
        android:fontFamily="@font/poppins_regular"
        android:paddingLeft="7dp"
        android:text="New Password"
        android:textSize="15sp"
        android:inputType="textPassword">
    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sl_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:text="Saved Login Info"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            />

        <Switch
            android:id="@+id/save_switch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:showText="false"
            android:layout_toEndOf="@+id/sl_info"
            android:layout_marginRight="30dp"/>





    </RelativeLayout>


</LinearLayout>